{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "moduleResolution": "node",
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noImplicitAny": false,
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ]
    },
    "include": ["src/**/*"]
  }